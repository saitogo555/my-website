{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignorePresets": [":prHourlyLimit2"],
  "timezone": "Asia/Tokyo",
  "dependencyDashboard": false,
  "automerge": true,
  "branchConcurrentLimit": 0,
  "labels": ["dependencies"],
  "schedule": ["every day"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@next", "next$", "^@types/react", "react$", "react-dom"],
      "groupName": "Next.jsとReactの依存関係",
      "groupSlug": "nextjs-and-react",
      "automerge": false
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ],
  "stabilityDays": 3
}